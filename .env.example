# SIP Protocol Environment Variables
# Copy this file to .env and fill in your values

# ─────────────────────────────────────────────────────────────
# NEAR Intents Integration
# ─────────────────────────────────────────────────────────────
# JWT token for NEAR Intents 1Click API
# Required for production mode
NEAR_INTENTS_JWT=

# ─────────────────────────────────────────────────────────────
# Zcash RPC (Integration Tests)
# ─────────────────────────────────────────────────────────────
# Set these to run Zcash integration tests
ZCASH_RPC_USER=
ZCASH_RPC_PASS=
ZCASH_RPC_HOST=127.0.0.1
ZCASH_RPC_PORT=18232
ZCASH_TESTNET=true
# Set to 'true' to enable send tests (requires funded wallet)
ZCASH_SEND_TEST=false

# ─────────────────────────────────────────────────────────────
# API Server (@sip-protocol/api)
# ─────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development

# Comma-separated list of allowed origins for CORS
# In production, set to your actual domains
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API key authentication (optional in development, required in production)
# Generate secure keys with: openssl rand -hex 32
API_KEYS=

# ─────────────────────────────────────────────────────────────
# Rate Limiting
# ─────────────────────────────────────────────────────────────
# Requests per window (default: 100)
RATE_LIMIT_MAX=100
# Window duration in ms (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# ─────────────────────────────────────────────────────────────
# Benchmarks (Optional)
# ─────────────────────────────────────────────────────────────
# Set to 'true' to run Noir proof benchmarks
BENCH_NOIR=false
